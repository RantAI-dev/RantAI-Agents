model Workflow {
  id              String         @id @default(cuid())
  name            String
  description     String?

  // Canvas data (React Flow format)
  nodes           Json           @default("[]")
  edges           Json           @default("[]")

  // Metadata
  trigger         Json           @default("{\"type\":\"manual\"}")
  variables       Json           @default("{\"inputs\":[],\"outputs\":[]}")

  // Status
  status          WorkflowStatus @default(DRAFT)
  version         Int            @default(1)

  // Relations
  organizationId  String?
  organization    Organization?  @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  createdBy       String
  assistantId     String?
  assistant       Assistant?     @relation(fields: [assistantId], references: [id], onDelete: SetNull)

  runs            WorkflowRun[]

  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@index([organizationId])
  @@index([assistantId])
}

model WorkflowRun {
  id              String     @id @default(cuid())
  workflowId      String
  workflow        Workflow    @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  status          RunStatus
  input           Json
  output          Json?
  error           String?

  // Execution trace
  steps           Json       @default("[]")
  suspendedAt     String?    // Step ID where execution is suspended (HITL)
  resumeData      Json?

  startedAt       DateTime   @default(now())
  completedAt     DateTime?

  @@index([workflowId, startedAt])
}

enum WorkflowStatus {
  DRAFT
  ACTIVE
  PAUSED
  ARCHIVED
}

enum RunStatus {
  PENDING
  RUNNING
  PAUSED
  COMPLETED
  FAILED
}
